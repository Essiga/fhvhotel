<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping default-access="field" default-cascade="all">
    <class name="at.fhv.hotelsoftware.domain.model.Booking" table="tbl_booking" lazy="true">

        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>

        <component name="bookingId" class="at.fhv.hotelsoftware.domain.model.Id">
            <property name="bookingId" column="bookingId" type="java.lang.String"/>
        </component>

        <property name="customer" column="customer" type="java.lang.String"/>

        <property name="fromDate" column="fromDate" type="java.time.LocalDate"/>

        <property name="toDate" column="toDate" type="java.time.LocalDate"/>

        <property name="cancellationDeadLine" column="cancellationDeadline" type="java.time.LocalDate"/>


        <property name="roomCategory" column="roomCategory">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">at.fhv.hotelsoftware.domain.model.RoomCategory</param>
                <param name="type">12</param>
            </type>
        </property>

        <property name="bookingStatus" column="bookingStatus">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">at.fhv.hotelsoftware.domain.model.BookingStatus</param>
                <param name="type">12</param>
            </type>
        </property>


        <component name="voucherCode" class="at.fhv.hotelsoftware.domain.model.VoucherCode">
            <property name="voucherCode" column="voucherCode" type="java.lang.String"/>
        </component>


        <property name="roomCount" column="roomCount" type="java.lang.Integer"/>

        <component name="testClass" class="at.fhv.hotelsoftware.domain.model.TestClass">
            <property name="rooms" column="testClass" type="List"/>
            <set name="rooms" table="room" inverse="true" cascade="save-update" lazy="true" fetch="select">
                <key>
                    <column name="ROOM_ID" not-null="true" />
                </key>
                <one-to-many class="at.fhv.hotelsoftware.domain.model.Room" />
            </set>
        </component>





        <!-- <one-to-one name="customer" cascade="all" lazy="false" constrained="true"
            class="at.fhv.hotelsoftware.domain.customer"/> -->
    </class>

    <class name="at.fhv.hotelsoftware.domain.model.Room" table="ans501">
        <id name="id" type="java.lang.Long" column="id" unsaved-value="-1">
            <generator class="increment"></generator>
        </id>
        <property name="roomNumber"></property>

    </class>
</hibernate-mapping>