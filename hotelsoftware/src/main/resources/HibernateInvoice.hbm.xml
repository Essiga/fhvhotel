<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="all">
    <class name="at.fhv.hotelsoftware.domain.model.Invoice" table="tbl_invoice" lazy="true">
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>

        <component name="invoiceNumber" class="at.fhv.hotelsoftware.domain.model.InvoiceNumber">
            <property name="invoiceNumber" column="invoiceNumber" type="java.util.UUID"/>
        </component>

        <component name="bookingId" class="at.fhv.hotelsoftware.domain.model.BookingId">
            <property name="bookingId" column="bookingId" type="java.util.UUID"/>
        </component>

        <property name="invoiceDate" column="invoiceDate" type="java.time.LocalDate"/>

        <property name="invoiceStatus" column="invoiceStatus">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">at.fhv.hotelsoftware.domain.model.InvoiceStatus</param>
                <param name="type">12</param>
            </type>
        </property>

        <bag name="lineItems" cascade="all">
            <key column="invoiceNumber"/>
            <one-to-many class="at.fhv.hotelsoftware.domain.model.LineItem"/>
        </bag>
    </class>

    <class name="at.fhv.hotelsoftware.domain.model.LineItem" table="tbl_lineItem">
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>

        <property name="roomCategory" column="roomCategory">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">at.fhv.hotelsoftware.domain.model.RoomCategory</param>
                <param name="type">12</param>
            </type>
        </property>

        <property name="roomCount" column="roomCount" type="java.lang.Integer"/>

        <property name="price" column="price" type="java.lang.Double"/>
    </class>
</hibernate-mapping>