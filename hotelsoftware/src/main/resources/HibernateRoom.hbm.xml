<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/orm/hbm">
    <class name="at.fhv.hotelsoftware.domain.model.Room" table="tbl_room" lazy="true">
        <id name="id" type="java.lang.Long" column="id" unsaved-value="null">
            <generator class="native"/>
        </id>

   <!--     <component name="roomId" class="at.fhv.hotelsoftware.domain.model.RoomId">
            <property name="roomId" column="roomId" type="java.util.UUID"/>
        </component> -->

        <property name="roomCategory" column="roomCategory">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">at.fhv.hotelsoftware.domain.model.RoomCategory</param>
                <param name="type">12</param>
            </type>
        </property>

        <property name="roomNumber" column="roomNumber" type="java.lang.Integer"/>

        <property name="roomStatus" column="roomStatus">
        <type name="org.hibernate.type.EnumType">
            <param name="enumClass">at.fhv.hotelsoftware.domain.model.RoomStatus</param>
            <param name="type">12</param>
        </type>
        </property>

        <component name="bookingId" class="at.fhv.hotelsoftware.domain.model.BookingId">
            <property name="bookingId" column="bookingId" type="java.util.UUID"/>
        </component>


   </class>
</hibernate-mapping>